<Page
	x:Class="IoTHub.UWP.Views.PivotPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	DataContext="{Binding PivotViewModel, Source={StaticResource Locator}}"
	Style="{StaticResource PageStyle}"
	xmlns:views="using:IoTHub.UWP.Views"
	mc:Ignorable="d">

	<Grid>
		<Pivot x:Uid="PivotPage">
			<PivotItem x:Uid="PivotItem_Devices" Header="Devices">
				<Frame>
					<views:DevicesPage />
				</Frame>
			</PivotItem>
			<PivotItem x:Uid="PivotItem_Settings">
				<Frame>
					<views:SettingsPage />
				</Frame>
			</PivotItem>
		</Pivot>
	</Grid>
</Page>